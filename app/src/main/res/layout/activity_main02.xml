<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:id="@+id/root">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarMain"
            app:contentInsetStart="0dp"
            style="@style/Toolbar">

            <ImageView
                android:id="@+id/content_hamburger"
                style="@style/ImageView.Hamburger"
                android:src="@drawable/ic_menu_90"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"/>
            <xyz.iiemyewrs.www.technica.library.CanaroTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:focusable="true"/>
        </android.support.v7.widget.Toolbar>



        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="showPopup"
            android:padding="8dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_more"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView" />-->
    </RelativeLayout>

    <xyz.iiemyewrs.www.technica.library.CircleMenuLayout
        android:id="@+id/id_menulayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/circle_bg3"
        android:padding="100dp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_horizontal|center_vertical|center">

        <RelativeLayout
            android:id="@+id/id_circle_menu_item_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:layout_centerInParent="true"
                android:background="@drawable/logo1" />

        </RelativeLayout>
    </xyz.iiemyewrs.www.technica.library.CircleMenuLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:text="National Institute of Technology\nDelhi"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

</FrameLayout>