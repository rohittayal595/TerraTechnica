<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/about_group"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="48dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/about_us" />

                <xyz.iiemyewrs.www.technica.library.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="About Us" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notifcation_group"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="48dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/notification" />

                <xyz.iiemyewrs.www.technica.library.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Notifications" />
            </LinearLayout>

            <LinearLayout
            android:id="@+id/faq_group"
            style="@style/LinearLayout.GuillotineItem"
            android:layout_marginTop="48dp">

            <ImageView
                style="@style/ImageView.GuillotineItem"
                android:src="@drawable/feedback" />

            <xyz.iiemyewrs.www.technica.library.CanaroTextView
                style="@style/TextView.GuillotineItem"
                android:text="FAQ" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_group"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="48dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/share" />

                <xyz.iiemyewrs.www.technica.library.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Share" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedback_group"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="48dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/feedback" />

                <xyz.iiemyewrs.www.technica.library.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Feedback" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/metal_hunt_group"
                style="@style/LinearLayout.GuillotineItem"
                android:layout_marginTop="48dp">

                <ImageView
                    style="@style/ImageView.GuillotineItem"
                    android:src="@drawable/notification" />

                <xyz.iiemyewrs.www.technica.library.CanaroTextView
                    style="@style/TextView.GuillotineItem"
                    android:text="Metal Hunt" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>